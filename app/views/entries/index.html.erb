<p id="notice"><%= notice %></p>
<div class="columns mt-6 is-centered">
    <% @entries.each do |entry| %>
      <div class="column is-one-quarter">
        <div class="card">
          <header class="card-header">
            <p class="card-header-title"><%= entry.meal %></p>
          </header>
          <div class="card-content">
            <div class="content">
              <p><span class="has-text-weight-bold"><%= entry.calories %></span> Total Calories</p>
              <p><span class="has-text-weight-bold"><%= entry.proteins %></span>g of Protein</p>
              <p><span class="has-text-weight-bold"><%= entry.carbs %></span>g of Carbs</p>
              <p><span class="has-text-weight-bold"><%= entry.fats %></span>g of Fats</p>
              <p class="italic">Logged <%= time_ago_in_words(entry.created_at) %> ago.</p>
            </div>
          </div>
          <div class="card-footer">
            <%= link_to 'Show', entry, class: "card-footer-item" %>
            <%= link_to 'Edit', edit_entry_path(entry), class: "card-footer-item"  %>
            <%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' }, class: "card-footer-item"  %>
          </div>
        </div>
      </div>
    <% end %>
</div>
