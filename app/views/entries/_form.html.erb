<%= form_with(model: entry) do |form| %>
  <% if entry.errors.any? %>
    <div class="message is-danger">
      <div class="message-header">
        <p><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</p>
      </div>
      <div class="message-body">
        <ul>
          <% entry.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :meal, class: "label" %>
    <%= form.text_field :meal, class: "input is-rounded" %>
  </div>

  <div class="field">
    <%= form.label :calories, class: "label" %>
    <%= form.number_field :calories, class: "input is-rounded" %>
  </div>

  <div class="field">
    <%= form.label :proteins, class: "label" %>
    <%= form.number_field :proteins, class: "input is-rounded" %>
  </div>

  <div class="field">
    <%= form.label :carbs, class: "label" %>
    <%= form.number_field :carbs, class: "input is-rounded" %>
  </div>

  <div class="field">
    <%= form.label :fats, class: "label" %>
    <%= form.number_field :fats, class: "input is-rounded" %>
  </div>

  <div class="actions">
    <%= form.submit class: "button is-success" %>
    <%= link_to 'Back', entries_path, class: "button is-dark" %>
  </div>
<% end %>
