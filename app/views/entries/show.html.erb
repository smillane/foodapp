<div class="columns mt-6 is-centered">
  <div class="column is-one-third">
    <nav class="panel is-link">
      <p class="panel-heading">
        <%= @entry.meal %>       
      </p>

      <div class="panel-block">
        Calories: <%= @entry.calories %>
      </div>
      <div class="panel-block">
        Protein: <%= @entry.proteins %>
      </div>
      <div class="panel-block">
        Carbs: <%= @entry.carbs %>
      </div>
      <div class="panel-block">
        Fats: <%= @entry.fats %>
      </div>
    </nav>

    <div class="columns is-mobile">
      <div class="column">
        <%= link_to 'Edit', edit_entry_path(@entry), class: "button is-warning" %>
        <%= link_to 'Back', entries_path, class: "button is-dark" %>
        <%= link_to 'Destroy', entry_path(@entry), method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-danger"  %>
      </div>
    </div>
  </div>
</div>


